---
permalink: "/api/stats.json"
layout: null
---
{
  {% for lang in site.term_languages %}
  {%- assign counter = 0 -%}
  {%- for concept in site.concepts -%}
    {% unless concept[lang] == nil or concept[lang] == "" %}
    {% assign counter = counter | plus: 1 %}
    {% endunless %}
  {%- endfor -%}
  "{{ lang }}": {{ counter }}{% unless forloop.last %},{% endunless %}
  {% endfor %}
}

